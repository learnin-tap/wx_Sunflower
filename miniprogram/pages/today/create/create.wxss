.chooseTime{
  display:flex;
  background-color:#58D68D; 
  height:48px;
}
.chooseTime image{
  width:48px;
  height:48px;
  position:absolute;
  right:0;
}
.btn{
  position: fixed;
  bottom: 0px;
  width: 750rpx;
  background-color: #f00;
  color: #fff;
}
.matter{
  display: flex;
  flex-direction: column;
}
.add{
  width:48px;
  height:48px;
  position:relative;
  left:660rpx;
}
.modal_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9;
  color: #fff;
}
.animation {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  background: #fff;
}