@import '../../../template/template.wxss';

.plan {
  display: flex;
  height: 60px;
  align-items: center;
}

.name-date {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 20px;
  width: 200px;
}

.name {
  font-size: 18px;
}

.date {
  font-size: 12px;
  color:#888888
}

.progress {
  position: absolute;
  right: 20px;
  align-items: center;
  display: flex;
}

.progress image {
  width: 20px;
  height: 20px;
}

.progress-time {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 5px;
}

.progress-time text {
  font-size: 12px;
  color: #999;
}

.hr10 {
  height: 10px;
}
